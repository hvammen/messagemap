<div id="signup_box">
	<% form_for @user, :url => { :action => 'signup' } do |u| %>
	<div id="header">Signup
	<div id="msg"><%= u.error_messages %></div>
	</div>

<table>
	<tr>
		<th>Name</th>
		<td><%=u.text_field :user_name, :class => 'inp_signup', :size => 25 %></td>
	</tr>
	<tr>
		<th>Username</th>
		<td><%=u.text_field :user_username, :class => 'inp_signup', :size => 18 %></td>
	</tr>
	<tr>
		<th>Password</th>
		<td><%=u.password_field :user_password, :class => 'inp_signup', :size => 18 %></td>
	</tr>
	<tr>
		<th>Confirm Password</th>
		<td><%= password_field :user, :user_password_confirmation, :class => 'inp_signup', :size => 18 %></td>
	</tr>
	<tr>
		<th>Email</th>
		<td><%=u.text_field :user_email, :class => 'inp_signup', :size => 25 %></td>
	</tr>
	<tr>
		<th>About</th>
		<td><%=u.text_area :user_about, :class => 'inp_signup' %></td>
	</tr>
	<tr>
		<th>Website</th>
		<td><%=u.text_field :user_website, :class => 'inp_signup', :size => 30, :value => 'http://' %></td>
	</tr>
	<tr>
		<th>Phone</th>
		<td><%=u.text_field :user_phone, :class => 'inp_signup', :size => 15 %></td>
	</tr>
	<tr>
		<th>Sex</th>
		<td><%=u.text_field :user_sex, :class => 'inp_signup', :size => 4 %> m/f</td>
	</tr>
	<tr>
		<th>Birth</th>
		<td><%=u.text_field :user_birth, :class => 'inp_signup', :size => 8 %>mm/dd/yyyy</td>
	</tr>
	<tr>
		<td colspan="2"><%=u.submit 'Sign up', :class => 'inp_sbm' %></td>
	</tr>
</table>
<% end %>
</div>
